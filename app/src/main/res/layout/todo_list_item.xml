<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_list_item"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/tv_todo_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TODO_NAME"
                    android:paddingTop="0dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:paddingBottom="0dp"
                    android:paddingHorizontal="16dp"
                    android:minLines="1"
                    android:maxLines="1"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_todo_detail"
                    android:text="@string/TODO_DETAILS"
                    android:paddingTop="0dp"
                    android:paddingBottom="4dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:paddingHorizontal="16dp"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:minLines="0"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/gradient_list_side"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>